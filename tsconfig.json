/**
 *  This setting is used by me to activate the super-strict compilation method.
 *  Defaults are omitted from this file. Only non-default settings are changed here.
 *  For reference, see more at https://aka.ms/tsconfig.json.
 */
{
  "ts-node": {
    "files": true
  },
  "files": ["src/index.ts", "./extensions.d.ts"],
  "compilerOptions": {
    /* Basic Options */
    "target": "es2022",
    "module": "CommonJS",
    "outDir": "./dist",
    "lib": ["es2022"],
    "removeComments": true,
    "isolatedModules": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "strictPropertyInitialization": false,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /** TypeORM */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.{ts,mts}"],
  "exclude": [
    "node_modules",
    "./src/__tests__",
    "./src/__tests__setup__",
    "./src/__tests__suites__"
  ]
}
